<!-- Experiences Section -->
<section id="experience" class="py-16">
  <h2 class="text-5xl text-center font-bold text-white mb-10">Experience</h2>
  <div class="flex flex-col gap-8 max-w-4xl mx-auto">
    <% if (experiences && experiences.length > 0) { %>
      <% experiences.forEach(exp => { %>
        <div class="p-6 rounded-2xl shadow-md text-white
                    bg-gradient-to-r from-blue-900 via-cyan-700 to-blue-500
                    animate-gradient
                    transition-all duration-700 border border-cyan-400 
                    hover:bg-white/20 hover:scale-105 transform duration-300">
          <h3 class="text-2xl text-cyan-300 font-bold"><%= exp.role %> - <%= exp.company %></h3>
          <p class="italic text-gray-300"> <%= exp.duration %></p>
          <p class="mt-2 text-gray-200"><%= exp.description %></p>
        </div>
      <% }) %>
    <% } else { %>
      <p class="text-center text-gray-300 text-xl">No experience added yet.</p>
    <% } %>
  </div>
</section>


<!-- Project Section -->
